<h1>Connecte toi !</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder:'Entre ton e-mail' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder:'Entre ton mot de passe' %>
      </div>
      <div class="form-group">
        <%= f.label :remember_me, class: "checkbox" do %>
        <%= f.check_box :remember_me %>
        <span>Se rappeler de moi</span>
        <% end %>
        </div>

      <%= f.submit "Me connecter", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>





