<div class="row">
  <div class="col-md-6 col-md-offset-3">

<h1>Inscris-toi !</h1>

<%= form_for :user do |f| %>

<div class="form-group">
<%= f.email_field :email, class:'form-control', placeholder:'Entre ton e-mail' %>
</div>

<div class="form-group">
<%= f.password_field :password, class:'form-control', placeholder:'Entre ton mot de passe' %>
</div>

<%= f.submit "M'inscrire", class:'btn btn-primary' %>
<% end %>

</div>
</div>
